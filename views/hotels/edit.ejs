<% include ../partials/header.ejs %>
<div class="container">
<form action="/hotels/<%= found._id %>?_method=PUT" method="POST" name="hot">
    <div class="input">
    <input class="form-control" type="text" name="data[name]" value="<%= found.name %>"></input>
    <input class="form-control" type="number" name="data[price]" value="<%= found.price %>" min="50.0" step="1.0"></input>
    <input class="form-control" type="text" name="data[imageurl]" value="<%= found.image %>"></input>
    <input class="form-control" type="text" name="data[description]"  value="<%= found.description %>"></input>
    <input class="btn btn-default btn-large" type="submit"></input>
    </div>
</form>
</div>
<p>
    <a href="/hotels" class="btn btn-primary ntn-lg">View your list</a>
</p>
